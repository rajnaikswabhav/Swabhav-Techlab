@using DataAnnotstionApp.Models;
@model Student
@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Add Student</h2>
    @Html.ValidationSummary(true, "", new { @class = "text-danger "})
    @using (Html.BeginForm("StudentDetails", "Student", FormMethod.Post))
    {
        <p>
            Student RollNo : @Html.TextBoxFor(m => m.Id)
            @Html.ValidationMessageFor(m => m.Id)
        </p>
        <p>
            Student Name   : @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </p>
        <p>
            Student Age    : @Html.TextBoxFor(m => m.Age)
            @Html.ValidationMessageFor(m => m.Age)
        </p>
        <p>
            UserName       : @Html.TextBoxFor(m => m.UserName)
            @Html.ValidationMessageFor(m => m.UserName)
        </p>
        <p>
            Password       : @Html.TextBoxFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </p>
        <p>
            Email          : @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </p>
        <p>
            <input type="submit"/>
        </p>
    }
    <br /><br />
    <h3>Student Details</h3>
    <h4 style="color:green">
        <p>
            Student RollNo : @ViewBag.Id<br />
            Student Name   : @ViewBag.name<br />
            Student Age    : @ViewBag.age<br />
            UserName       : @ViewBag.userName<br />
            Password       : @ViewBag.pass<br />
            Email          : @ViewBag.email<br />
        </p>
    </h4>
</body>
</html>
