
@using EmployeeMVCApp.ViewModel;
@model IndexViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Employee Count is: @Model.EmpCount</h2>
    <br />
    <h3>@Html.ActionLink("AddEmployee","Add")</h3>
    <br /><br />
    <table border="1">
        <tr>
            <th>
                EmpId
            </th>
            <th>
                EmpName
            </th>
            <th>
                Salary
            </th>
            <th>
                DeptNo
            </th>
            <th>
                Events
            </th>
        </tr>
        @foreach (var emp in Model.Employees)
            {
            <tr>
                <td>
                    @emp.Id
                </td>
                <td>
                    @emp.Name
                </td>
                <td>
                    @emp.Salary
                </td>
                <td>
                    @emp.DeptNo
                </td>
                <td>
                    @Html.ActionLink("edit", "Edit",new { id = emp.Id})
                    @Html.ActionLink("delete","Delete",new { id = emp.Id})
                </td>
            </tr>
        }
    </table>
</body>

</html>
